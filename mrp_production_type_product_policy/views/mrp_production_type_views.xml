<openerp>
<data>
    <record id="mrp_production_type_view_form" model="ir.ui.view">
        <field name="name">mrp.production_type form</field>
        <field name="model">mrp.production_type</field>
        <field name="inherit_id" ref="mrp_production_type.mrp_production_type_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='note']" position="before">
                    <page name="product" string="Product Policy">
                        <group name="product_1" colspan="4" col="2">
                            <field name="restrict_product"/>
                        </group>
                        <group name="product_2" colspan="4" col="2" string="Allowed Product Categories">
                            <field name="allowed_product_categ_ids" nolabel="1" colspan="2"/>
                        </group>
                        <group name="product_3" colspan="4" col="2" string="Allowed Products">
                            <field name="allowed_product_ids" nolabel="1" colspan="2"/>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</data>
</openerp>
